<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Don't enforce specific rules on example Java files -->
    <suppress checks="MagicNumber" files=".+\.java$" />
    <suppress checks="MissingJavadocMethod" files=".+\.java$" />
    <suppress checks="HideUtilityClassConstructor" files=".+\.java$" />
    <suppress checks="JavadocPackage" files=".+\.java$" />
    <suppress checks="PackageNameCheck" files=".+\.java$" />

    <!-- Don't do any CheckStyle checks on any non-Java files. -->
    <suppress files=".+\.(?:txt|xml|csv|sh|thrift|html|sql|eot|ttf|woff|css|png)$" checks=".*" />
</suppressions>
